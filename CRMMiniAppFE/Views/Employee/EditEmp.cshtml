@model CRMMiniAppFE.Models.employeeModel

@{
    ViewBag.Title = "EditEmp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Convert.ToString(Session["Role"]) == "Admin")
{
    <h2>Chỉnh sửa nhân viên</h2>


    using (Html.BeginForm(FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.HiddenFor(model => model.MaNV)
            </div>

            <div class="form-group">
                <b style="float:left;">Họ tên NV:</b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HoTenNV, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoTenNV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <b style="float:left;">Địa chỉ:&emsp;&ensp;</b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <b style="float:left;">Điện thoại:</b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DienThoai, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <b style="float:left;">Role:&emsp;&emsp;&ensp;</b>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Role, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
}
else
{
    <h2>Bạn không có quyền quản lý nhân viên</h2>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
